<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_login"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.jasoncavinder.inpen.demo.login.ui.WelcomeFragment"
        android:label="Welcome"
        tools:layout="@layout/fragment_login_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_welcomeFragment_to_createUserFragment"
            app:destination="@id/createUserFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.jasoncavinder.inpen.demo.login.ui.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login_login" />
    <fragment
        android:id="@+id/createUserFragment"
        android:name="com.jasoncavinder.inpen.demo.onboarding.ui.CreateUserFragment"
        android:label="fragment_create_user"
        tools:layout="@layout/fragment_login_create_user" >
        <action
            android:id="@+id/action_createUserFragment_to_addPenFragment"
            app:destination="@id/addPenFragment" />
    </fragment>
    <fragment
        android:id="@+id/addPenFragment"
        android:name="com.jasoncavinder.inpen.demo.onboarding.ui.AddPenFragment"
        tools:layout="@layout/fragment_add_pen">
        <action
            android:id="@+id/action_addPenFragment_to_addProviderFragment"
            app:destination="@id/addProviderFragment" />
    </fragment>
    <fragment
        android:id="@+id/addProviderFragment"
        android:name="com.jasoncavinder.inpen.demo.onboarding.ui.AddProviderFragment"
        tools:layout="@layout/fragment_add_provider" />
</navigation>