<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.jasoncavinder.insulinpendemoapp.ui.main.ProfileFragment"
        android:label="Profile">
        <action
            android:id="@+id/action_profile_to_payment"
            app:destination="@id/paymentFragment" />
        <action
            android:id="@+id/action_profileFragment_pop"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.jasoncavinder.insulinpendemoapp.ui.main.HomeFragment"
        android:label="At A Glance"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_messageFragment"
            app:destination="@id/messageFragment" />
        <!--<action-->
        <!--android:id="@+id/action_homeFragment_to_reporting"-->
        <!--app:destination="@id/reporting" />-->
    </fragment>
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.jasoncavinder.insulinpendemoapp.ui.main.PaymentFragment"
        android:label="Payment">
        <action
            android:id="@+id/action_paymentFragment_pop"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/paymentFragment"
            app:popUpToInclusive="true" />
    </fragment>
