<androidx.preference.PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:title="types">

        <CheckBoxPreference
                android:defaultValue="false"
                android:title="Check box preference" android:key="check_box_preference_1"/>

        <EditTextPreference
                android:defaultValue="Default value"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:title="Edit text preference" android:key="edit_text_preference_1"/>

        <ListPreference
                android:defaultValue="1"
                android:title="List preference" android:entries="@android:array/config_keySystemUuidMapping"
                android:entryValues="@android:array/config_keySystemUuidMapping" android:key="list_preference_1"/>

        <ListPreference
                android:defaultValue="1"
                android:title="List preference" android:entries="@android:array/emailAddressTypes"
                android:entryValues="@android:array/emailAddressTypes" android:key="list_preference_1"/>

        <MultiSelectListPreference
                android:title="Multi select list preference" android:defaultValue="@android:array/imProtocols"
                android:entries="@android:array/imProtocols" android:entryValues="@android:array/imProtocols"
                android:key="multi_select_list_preference_1"/>

        <RingtonePreference
                android:defaultValue=""
                android:title="Ringtone preference" android:key="ringtone_preference_1"/>

        <SwitchPreference
                android:defaultValue="false"
                android:title="Switch preference" android:key="switch_preference_1"/>

        <Preference
                app:key="feedback"
                app:title="Send feedback"
                app:summary="Stuff here"/>

    </PreferenceCategory>

    <PreferenceCategory
            app:title="messages_header">

        <EditTextPreference
                app:key="signature"
                app:title="signature_title"
                app:useSimpleSummaryProvider="true"/>


    </PreferenceCategory>

    <PreferenceCategory
            app:title="sync_header">

        <SwitchPreferenceCompat
                app:key="sync"
                app:title="sync_title"/>

        <SwitchPreferenceCompat
                app:key="attachment"
                app:title="attachment_title"
                app:summaryOn="attachment_summary_on"
                app:summaryOff="attachment_summary_off"
                app:dependency="sync"/>

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
