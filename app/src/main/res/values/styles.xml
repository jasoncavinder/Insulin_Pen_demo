<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash Screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_v2</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- Primary Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

    </style>


    <!-- Pre-login Theme-->
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- ripple effect -->
        <item name="colorControlHighlight">@color/primaryColor</item>
        <!-- status bar background -->
        <item name="colorPrimaryDark">@color/secondaryColor</item>

        <item name="android:colorBackground">@color/secondaryColor</item>

        <!-- color for text fields -->
        <item name="colorControlNormal">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryColor</item>

        <item name="android:textColorPrimary">@color/secondaryTextColor</item>


        <item name="colorSecondary">@color/primaryColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <!--makes status bar easier to read-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->

        <!-- give a tint to the "negative" buttons -->
        <!--<item name="colorButtonNormal">@color/primaryColor_50</item>-->

        <!-- highlight color for text fields -->
        <!--<item name="colorControlActivated">@color/primaryColor</item>-->

        <!--<item name="editTextStyle">@style/LoginEditText</item>-->
    </style>


    <style name="AppTheme.LoginEditText">

    </style>


    <style name="AppTheme.LoginControls">

    </style>


    <style name="Widget.AppCompat.Button.Colored.Login">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <!--<item name="theme">@style/AppTheme.LoginControls</item>-->
    </style>

</resources>
