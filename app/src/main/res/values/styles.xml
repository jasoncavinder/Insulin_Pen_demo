<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash Screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_v2</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="AppTheme.Login">
        <item name="colorPrimaryDark">@color/secondaryDarkColor</item>
        <item name="background">@color/secondaryColor</item>
        <item name="android:textStyle">bold</item>
        <item name="colorAccent">@color/surfaceColor_900</item>
        <item name="android:textColor">@color/surfaceColor_900</item>
    </style>


    <style name="AppTheme.LoginEditText">

    </style>


    <style name="AppTheme.LoginControls">

    </style>


    <style name="Widget.AppCompat.Button.Colored.Login">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="theme">@style/AppTheme.LoginControls</item>
    </style>

    <style name="FillParent" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
