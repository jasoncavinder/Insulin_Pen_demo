<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".LoginFragment"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:id="@+id/frameLayout2" android:background="?attr/colorAccent">

    <androidx.constraintlayout.widget.Group
            android:id="@+id/group_login_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            tools:visibility="visible"
            app:constraint_referenced_ids="image_logo,button_signin,button_signup,text_lead"/>
    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp" android:id="@+id/image_logo"
            android:contentDescription="@string/app_icon" android:visibility="visible"
            android:src="@drawable/ic_launcher"
            app:layout_constraintStart_toStartOf="@+id/button_signup"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/text_lead"
            app:layout_constraintVertical_chainStyle="packed"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_lead"
            android:visibility="visible"
            android:text="@string/launch_screen_text"
            android:paddingBottom="12dp"
            app:layout_constraintStart_toStartOf="@+id/button_signup"
            app:layout_constraintTop_toBottomOf="@+id/image_logo"
            app:layout_constraintBottom_toTopOf="@+id/button_signup"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>
    <Button
            android:text="@string/sign_in"
            android:layout_width="wrap_content"
            android:id="@+id/button_signin"
            android:textStyle="bold" android:textSize="18sp"
            android:textAllCaps="false" android:layout_height="wrap_content"
            android:enabled="true"
            style="@style/Widget.AppCompat.Button.Colored"
            android:paddingBottom="16dp"
            android:paddingLeft="32dp" android:paddingRight="32dp" android:paddingTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/button_signup" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_signup"
            android:theme="@style/AppTheme.LoginControls"/>
    <Button
            android:text="@string/sign_up"
            android:layout_width="wrap_content"
            android:id="@+id/button_signup"
            android:textStyle="bold" android:textSize="18sp"
            android:textAllCaps="false" android:layout_height="wrap_content"
            android:enabled="true"
            style="@style/Widget.AppCompat.Button.Colored"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" android:paddingLeft="32dp" android:paddingRight="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button_signin"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@+id/text_lead"
            app:layout_constraintBottom_toBottomOf="parent"
            android:theme="@style/AppTheme.LoginControls"/>

    <androidx.constraintlayout.widget.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_login_form"
            android:visibility="gone"
            app:constraint_referenced_ids="button_login,button_cancel,edit_text_email,edit_text_pass"
            tools:visibility="visible"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textWebEmailAddress"
            android:ems="12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/edit_text_email"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_pass" android:hint="@string/email"
            android:paddingTop="8dp" android:paddingBottom="8dp"
            android:paddingStart="8dp" android:paddingEnd="8dp"
            android:singleLine="true" android:autofillHints="email "
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_chainStyle="packed"
            android:textColor="?android:attr/textColorSecondary" android:textColorHighlight="?attr/colorPrimary"
            android:theme="@style/AppTheme.LoginEditText" android:textStyle="bold"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="12"
            android:id="@+id/edit_text_pass" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/edit_text_email"
            app:layout_constraintBottom_toTopOf="@+id/button_cancel" app:layout_constraintHorizontal_bias="0.5"
            android:hint="@string/password" android:autofillHints="password "
            android:selectAllOnFocus="true" android:singleLine="true"
            android:textColor="?android:attr/textColorSecondary" android:textColorHighlight="?attr/colorPrimary"
            android:theme="@style/AppTheme.LoginEditText" android:textStyle="bold" android:paddingStart="8dp"
            android:paddingTop="8dp" android:paddingEnd="8dp" android:paddingRight="8dp"/>
    <Button
            android:text="@android:string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_cancel"
            style="@style/Widget.AppCompat.Button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button_login"
            app:layout_constraintHorizontal_chainStyle="spread" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_pass"
            android:textColor="?android:attr/textColorSecondary"
            android:theme="@style/AppTheme.LoginControls" android:textStyle="bold"/>
    <Button
            android:id="@+id/button_login"
            android:text="@string/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintStart_toEndOf="@+id/button_cancel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_cancel"
            app:layout_constraintBottom_toBottomOf="@+id/button_cancel"
            android:theme="@style/AppTheme.LoginControls" android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>

