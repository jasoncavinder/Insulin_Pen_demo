<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="androidx.lifecycle.MediatorLiveData&lt;com.jasoncavinder.insulinpendemoapp.database.entities.user.User&gt;" />

        <variable
            name="penStatus"
            type="com.jasoncavinder.insulinpendemoapp.viewmodels.PenStatus" />

        <variable
            name="nextBasalDose"
            type="androidx.lifecycle.LiveData&lt;com.jasoncavinder.insulinpendemoapp.database.entities.dose.Dose&gt;" />

        <variable
            name="nextBolusDose"
            type="androidx.lifecycle.LiveData&lt;com.jasoncavinder.insulinpendemoapp.database.entities.dose.Dose&gt;" />

        <variable
            name="noMessages"
            type="androidx.lifecycle.LiveData&lt;Boolean&gt;" />
    </data>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.jasoncavinder.insulinpendemoapp.ui.main.HomeFragment"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="0dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryColor_50"
                android:backgroundTint="@color/primaryColor_50"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_profile_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/surfaceLightColor"
                    android:elevation="8dp">

                    <include
                        android:id="@+id/profile_summary"
                        layout="@layout/content_profile_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:nextBasalDose="@{nextBasalDose}"
                        app:nextBolusDose="@{nextBolusDose}"
                        app:penStatus="@{penStatus}"
                        app:user="@{user}" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_messages_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/surfaceLightColor"
                    android:elevation="8dp">

                    <include
                        android:id="@+id/messages_summary"
                        layout="@layout/content_messages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:noMessages="@{noMessages}" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_report_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/surfaceLightColor"
                    android:elevation="8dp">

                    <include
                        android:id="@+id/report_summary"
                        layout="@layout/content_report_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/button_logout"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/logout" />
            </LinearLayout>

        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_demo_actions_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:elevation="4dp"
            app:srcCompat="@drawable/ic_add_24dp"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="0dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            tools:style="Widget.MaterialComponents.Button.UnelevatedButton" />

    </FrameLayout>

</layout>