<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.jasoncavinder.insulinpendemoapp.todo.viewmodels.MainViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.jasoncavinder.insulinpendemoapp.todo.ui.main.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/surfaceColor"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_profile_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:elevation="8dp">

                <include
                    android:id="@+id/profile_summary"
                    layout="@layout/content_profile_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:viewModel="@{viewModel}" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_messages_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:elevation="8dp">

                <include
                    android:id="@+id/messages_summary"
                    layout="@layout/content_messages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <!--app:viewModel="@{viewModel}" />-->

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_report_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:elevation="8dp">

                <include
                    android:id="@+id/report_summary"
                    layout="@layout/content_report_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <!--app:viewModel="@{viewModel}" />-->

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</layout>