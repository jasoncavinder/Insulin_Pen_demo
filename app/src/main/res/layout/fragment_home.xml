<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" android:background="@color/surfaceColor">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_profile_summary"
            android:layout_margin="16dp" android:elevation="8dp">

        <include layout="@layout/content_profile_summary" android:layout_margin="16dp"
                 android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_messages_summary"
            android:layout_margin="16dp" android:elevation="8dp">
        <include layout="@layout/content_messages" android:layout_height="wrap_content"
                 android:layout_width="match_parent"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/asdf"
            android:layout_margin="16dp" android:elevation="8dp">
        <include layout="@layout/content_report_summary"/>
    </androidx.cardview.widget.CardView>

    <!--<androidx.cardview.widget.CardView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->
        <!--<include layout="@layout/content_dummy"/>-->
    <!--</androidx.cardview.widget.CardView>-->


</LinearLayout>
