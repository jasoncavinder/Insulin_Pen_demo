        <TextView
                android:text="@string/create_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/text_headline"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/edit_text_first_name"
                app:layout_constraintVertical_chainStyle="packed" app:layout_constraintVertical_bias="0.26"
                android:textColor="?android:attr/textColorSecondary" android:textStyle="bold"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:id="@+id/edit_text_first_name"
                android:hint="First Name" android:singleLine="true"
                android:contentDescription="Please enter your first name"
                android:autofillHints="AUTOFILL_HINT_NAME"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/text_headline"
                app:layout_constraintEnd_toStartOf="@id/edit_text_last_name"
                app:layout_constraintStart_toStartOf="@id/edit_text_email"
                android:textColor="?android:attr/textColorSecondary"
                android:textStyle="bold" android:textColorHighlight="?attr/colorPrimary"
                android:theme="@style/AppTheme.LoginEditText" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/edit_text_email" android:paddingStart="8dp"
                android:paddingTop="8dp" android:paddingEnd="8dp" android:paddingBottom="8dp"
                app:layout_constraintHorizontal_chainStyle="spread_inside" android:ems="6"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:id="@+id/edit_text_last_name"
                android:hint="Last Name" android:singleLine="true"
                android:contentDescription="Please enter your full name"
                android:autofillHints="AUTOFILL_HINT_NAME"
                app:layout_constraintEnd_toEndOf="@id/edit_text_email"
                app:layout_constraintStart_toEndOf="@id/edit_text_first_name"
                android:textColor="?android:attr/textColorSecondary"
                android:textStyle="bold" android:textColorHighlight="?attr/colorPrimary"
                android:theme="@style/AppTheme.LoginEditText" app:layout_constraintHorizontal_bias="0.5"
                android:paddingStart="8dp"
                android:paddingTop="8dp" android:paddingEnd="8dp" android:paddingBottom="8dp" android:ems="6"
                app:layout_constraintTop_toTopOf="@+id/edit_text_first_name"
                app:layout_constraintBottom_toBottomOf="@id/edit_text_first_name"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="12"
                android:id="@+id/edit_text_email" android:hint="Email"
                android:autofillHints="AUTOFILL_HINT_EMAIL_ADDRESS"
                android:singleLine="true" android:contentDescription="Please enter your email address"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_first_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="?android:attr/textColorSecondary" android:textStyle="bold"
                android:textColorHighlight="?attr/colorPrimary" android:theme="@style/AppTheme.LoginEditText"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/edit_text_password"
                android:paddingStart="8dp" android:paddingTop="8dp" android:paddingEnd="8dp"
                android:paddingBottom="8dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="12"
                android:id="@+id/edit_text_password" android:hint="Password"
                android:autofillHints="AUTOFILL_HINT_PASSWORD"
                android:singleLine="true" android:contentDescription="Choose a password"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_email" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:textColor="?android:attr/textColorSecondary"
                android:textStyle="bold" android:textColorHighlight="?attr/colorPrimary"
                android:theme="@style/AppTheme.LoginEditText" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/edit_text_confirm" android:paddingStart="8dp"
                android:paddingTop="8dp" android:paddingEnd="8dp" android:paddingBottom="8dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="12"
                android:id="@+id/edit_text_confirm" android:hint="Confirm Password"
                android:autofillHints="AUTOFILL_HINT_PASSWORD"
                android:contentDescription="Please confirm your password"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:textColor="?android:attr/textColorSecondary"
                android:textStyle="bold" android:textColorHighlight="?attr/colorPrimary"
                android:theme="@style/AppTheme.LoginEditText" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/text_terms" android:paddingStart="8dp"
                android:paddingTop="8dp" android:paddingEnd="8dp" android:paddingBottom="8dp"/>
        <TextView
                android:text="By creating an account you agree to our Terms of Service and Privacy Policy"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/text_terms"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_confirm" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/edit_text_confirm"
                app:layout_constraintEnd_toEndOf="@+id/edit_text_confirm" android:layout_marginEnd="8dp"
                android:textAlignment="center" android:textColor="?android:attr/textColorSecondary"
                android:textColorHighlight="?attr/colorPrimary" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:text="Continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button_create_user"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/text_terms"
                android:backgroundTint="?android:attr/colorControlNormal"
                app:layout_constraintStart_toEndOf="@+id/button_cancel" app:layout_constraintHorizontal_bias="0.5"
        />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_cancel"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button_create_user"
                app:layout_constraintTop_toTopOf="@+id/button_create_user"
                app:layout_constraintBottom_toBottomOf="@+id/button_create_user"
                app:layout_constraintHorizontal_chainStyle="spread" android:text="Cancel"
                android:textColor="?attr/colorControlNormal"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>