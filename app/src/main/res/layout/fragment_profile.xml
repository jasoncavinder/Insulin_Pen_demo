<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainViewModel"
            type="com.jasoncavinder.insulinpendemoapp.viewmodels.MainViewModel" />

        <variable
            name="viewModel"
            type="com.jasoncavinder.insulinpendemoapp.viewmodels.CreateUserViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryColor_50"
        android:orientation="vertical"
        tools:context="com.jasoncavinder.insulinpendemoapp.MainActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="16dp"
            app:cardBackgroundColor="@color/surfaceLightColor">

            <include
                layout="@layout/content_profile_full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mainViewModel="@{mainViewModel}" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="16dp">

            <include
                layout="@layout/content_provider_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:viewModel="@{viewModel}" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>