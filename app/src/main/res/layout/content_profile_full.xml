<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="androidx.lifecycle.LiveData&lt;com.jasoncavinder.insulinpendemoapp.database.entities.user.User&gt;" />

        <variable
            name="paymentMethod"
            type="androidx.lifecycle.LiveData&lt;com.jasoncavinder.insulinpendemoapp.database.entities.payment.Payment&gt;" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/image_nopic_user"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:tint="@color/surfaceTextColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text='@{user.firstName + " " + user.lastName ?? "not loaded"}'
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/primaryDarkColor"
            app:layout_constraintBottom_toTopOf="@+id/text_user_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_nopic_user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            tools:text="user's full name" />

        <TextView
            android:id="@+id/text_user_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{user.email}"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
            app:layout_constraintBottom_toTopOf="@+id/text_user_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_nopic_user"
            app:layout_constraintTop_toBottomOf="@+id/text_user_name"
            tools:text="email@example.com" />

        <TextView
            android:id="@+id/text_user_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text='@{String.format("%s%s%s", user.locationCity, (user.locationState.length() > 0)? ", " : "" , user.locationState)}'
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
            app:barrierMargin="8dp"
            app:layout_constraintBottom_toTopOf="@+id/text_user_payment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_nopic_user"
            app:layout_constraintTop_toBottomOf="@+id/text_user_email"
            tools:text="Location, State" />

        <TextView
            android:id="@+id/text_user_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text='@{String.format("Payment: %s", paymentMethod != null ? "is setup" : "is not setup")}'
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
            app:layout_constraintEnd_toStartOf="@+id/icon_payment_setup_status"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/image_nopic_user"
            app:layout_constraintTop_toBottomOf="@id/text_user_location"
            tools:text="Payment: " />

        <ImageView
            android:id="@+id/icon_payment_setup_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:src="@{paymentMethod != null ? @drawable/ic_check_circle_black_24dp : @drawable/ic_error_black_24dp}"
            android:tint="@{paymentMethod != null ? @color/successColor : @color/errorColor}"
            app:layout_constraintBottom_toBottomOf="@+id/text_user_payment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_user_payment"
            app:layout_constraintTop_toTopOf="@+id/text_user_payment" />
        <!--app:srcCompat="@drawable/ic_error_black_24dp"-->

        <Button
            android:id="@+id/button_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Edit\nProfile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_edit_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_user_payment" />

        <Button
            android:id="@+id/button_edit_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Change\nPassword"
            app:layout_constraintBottom_toBottomOf="@+id/button_edit_profile"
            app:layout_constraintEnd_toStartOf="@+id/button_edit_payment"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_edit_profile"
            app:layout_constraintTop_toTopOf="@+id/button_edit_profile" />

        <!-- TODO: make this work: -->
        <!--style="@{paymentMethod != null ? @style/Widget.AppCompat.Button : @style/Widget.AppCompat.Button.Colored}"-->
        <Button
            android:id="@+id/button_edit_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Edit\nPayment"
            app:layout_constraintBottom_toBottomOf="@+id/button_edit_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_edit_password"
            app:layout_constraintTop_toTopOf="@+id/button_edit_password" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>